# Start message
startup_message off 
bell_msg ""
 
# Set default encoding using utf8
defutf8 on
 
# Refresh the display when exiting programs
altscreen on
 
# Dynamic title
shelltitle '$ |'

defencoding utf8
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %Y/%m/%d%{= .m} %0c:%s "
 
#term screen-256color
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on
